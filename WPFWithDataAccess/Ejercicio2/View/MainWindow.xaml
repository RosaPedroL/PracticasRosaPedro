<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:ViewModel;assembly=ViewModel"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewmodel:MainViewModel></viewmodel:MainViewModel>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Registro de alumnos" Grid.Column="1"
               Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center"
               FontWeight="Bold" FontSize="25"></Label>

        <Label Content="Nombre" Grid.Row="1" Grid.Column="0"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontSize="15"></Label>
        <TextBox Text="{Binding Nombre}" Grid.Row="1" Grid.Column="1" Width="150"
                 Margin="10,20,10,20"></TextBox>
        
        <Label Content="Apellidos" Grid.Row="2" Grid.Column="0" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontSize="15"></Label>
        <TextBox Text="{Binding Apellidos}" Grid.Row="2" Grid.Column="1" 
                 Width="150" Margin="10,20,10,20"></TextBox>

        <Label Content="Promedio" Grid.Row="3" Grid.Column="0" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontSize="15"></Label>
        <TextBox Text="{Binding Promedio}" Grid.Row="3" Grid.Column="1" Width="150" 
                 Margin="10,20,10,20"></TextBox>

        <Button Content="Agregar" Grid.Row="4" Grid.Column="0" 
                Margin="10,20,10,20" Command="{Binding AgregarCommand}"></Button>

        <Button Content="Modificar" Grid.Row="4" Grid.Column="1" 
                Margin="10,20,10,20"></Button>

        <Button Content="Eliminar" Grid.Row="4" Grid.Column="2" 
                Margin="10,20,10,20"></Button>
        
        <Button Content="Limpiar" Grid.Row="4" Grid.Column="3" 
                 Margin="10,20,10,20"></Button>
        <DataGrid
            Grid.Row="1" Grid.Column="2"
            Grid.ColumnSpan="2" Grid.RowSpan="3"
            ItemsSource="{Binding Alumnos}"
            SelectedItem="{Binding AlumnoSeleccionado}"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre de Alumno" Binding="{Binding Nombre}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="Promedio" Binding="{Binding Promedio}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
